<Window x:Class="Paccia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paccia"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="525"
        Activated="MainWindowOnActivated">
    <Grid>
        <TextBox x:Name="PasswordSearchTextBox"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="126,10,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="381"
                 TextChanged="PasswordSearchTextBoxOnTextChanged" />
        <ListView x:Name="PasswordListView" 
                  SelectionChanged="PasswordListViewOnSelectionChanged"
                  HorizontalAlignment="Left"
                  Height="100"
                  Margin="10,38,0,0"
                  VerticalAlignment="Top"
                  Width="497">
            <ListView.DataContext>
                <local:Secret/>
            </ListView.DataContext>
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridViewColumn Header="Description" Width="Auto" DisplayMemberBinding="{Binding Path=Description}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="FieldsListView"
                  MouseDoubleClick="FieldsListViewOnMouseDoubleClick"
                  HorizontalAlignment="Left"
                  Height="170" 
                  Margin="10,143,0,0" 
                  VerticalAlignment="Top"
                  Width="497">
            <ListView.View>
                <GridView AllowsColumnReorder="true">
                    <GridViewColumn Header="Name" Width="Auto" DisplayMemberBinding="{Binding Path=Key}" />
                    <GridViewColumn Header="Value" Width="Auto" DisplayMemberBinding="{Binding Path=Value}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AddSecretButton"
                Content="Add new"
                HorizontalAlignment="Left"
                Margin="29,10,0,0" 
                VerticalAlignment="Top"
                Width="75" 
                Click="AddSecretButtonOnClick" />
    </Grid>
</Window>

